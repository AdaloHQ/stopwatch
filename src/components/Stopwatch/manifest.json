{
  "displayName": "Stopwatch",
  "defaultWidth": 132,
  "defaultHeight": 82,
  "components": "./index.js",
  "icon": "./icon.png",
  "props": [
    {
      "name": "timeColor",
      "displayName": "Time Color",
      "type": "color",
      "default": "@text"
    },
    {
      "name": "fontSize",
      "displayName": "Timer Font Size",
      "type": "number",
      "default": 30,
      "control": {
        "type": "slider",
        "min": 0,
        "max": 80
      }
    },
    {
      "name": "iconSize",
      "displayName": "Icon Size",
      "type": "number",
      "default": 20,
      "control": {
        "type": "slider",
        "min": 0,
        "max": 60
      }
    },
    {
      "name": "showMsec",
      "displayName": "Show Milliseconds?",
      "type": "boolean",
      "default": true
    }
  ],
  "childComponents": [
    {
      "name": "startButton",
      "displayName": "Start Button",
      "props": [
        {
          "name": "iconName",
          "displayName": "Icon",
          "type": "icon",
          "default": "play-arrow"
        },
        {
          "name": "color",
          "displayName": "Icon Color",
          "type": "color",
          "default": "@primary"
        },
        {
          "name": "startAction",
          "displayName": "Additional Actions when Start Button is Pressed",
          "type": "action",
          "arguments": [
            {
              "type": "number",
              "displayName": "Time (milliseconds)"
            },
            {
              "type": "text",
              "displayName": "Time (text)"
            }
          ]
        }
      ]
    },
    {
      "name": "pauseButton",
      "displayName": "Pause Button",
      "props": [
        {
          "name": "iconName",
          "displayName": "Icon",
          "type": "icon",
          "default": "pause"
        },
        {
          "name": "color",
          "displayName": "Icon Color",
          "type": "color",
          "default": "@primary"
        },
        {
          "name": "pauseAction",
          "displayName": "Action",
          "type": "action",
          "arguments": [
            {
              "type": "number",
              "displayName": "Time (milliseconds)"
            },
            {
              "type": "text",
              "displayName": "Time (text)"
            }
          ]
        }
      ]
    },
    {
      "name": "resetButton",
      "displayName": "Reset Button",
      "props": [
        {
          "name": "iconName",
          "displayName": "Icon",
          "type": "icon",
          "default": "replay"
        },
        {
          "name": "color",
          "displayName": "Icon Color",
          "type": "color",
          "default": "#757575"
        },
        {
          "name": "resetAction",
          "displayName": "Additional Actions when Reset Button is Pressed",
          "type": "action",
          "arguments": [
            {
              "type": "number",
              "displayName": "Time (milliseconds)"
            },
            {
              "type": "text",
              "displayName": "Time (text)"
            }
          ]
        }
      ]
    },
    {
      "name": "lapButton",
      "displayName": "Lap Button",
      "props": [
        {
          "name": "enabled",
          "type": "boolean",
          "default": false
        },
        {
          "name": "iconName",
          "displayName": "Icon",
          "type": "icon",
          "default": "timer"
        },
        {
          "name": "color",
          "displayName": "Icon Color",
          "type": "color",
          "default": "#757575"
        },
        {
          "name": "lapText",
          "displayName": "Lap Prefix",
          "type": "text",
          "default": "Lap:",
          "styles": {
            "fontFamily": "@body",
            "fontWeight": "400",
            "fontSize": "12",
            "color": "@primary"
          }
        },
        {
          "name": "lapAction",
          "displayName": "Additional Actions when Lap Button is Pressed",
          "type": "action",
          "arguments": [
            {
              "type": "number",
              "displayName": "Time (milliseconds)"
            },
            {
              "type": "text",
              "displayName": "Time (text)"
            }
          ]
        }
      ]
    }
  ]
}
